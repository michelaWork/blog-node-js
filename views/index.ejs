<div class="author">
  <h1 class="author__heading">Hi, I am Michela.</h1>
  <p class="author__body">Web developer</p>
</div>

<img
  src="/img/hero-image.jpg"
  alt="desk with a laptop"
  class="hero-image"
  width="900"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="articles-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
</section>
